<tal:snippet
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <aside class="card portlet ${view/filterClassName} collectionSearch pat-collectionfilter"
       data-pat-collectionfilter='${view/pat_options}'
      tal:condition="view/available"
       i18n:domain="plone">

  <header class="card-header portletHeader" tal:condition="view/title" tal:content="view/title">Title</header>
  
  <div class="card-body searchContent">
    <form method="get" name="searchForm" role="form" action="${view/action_url}">
        <tal:urlquery repeat="item python:view.urlquery">
          <input type="hidden" name="${python:item[0]}" value="${python:item[1]}"/>
        </tal:urlquery>
        <input
          name="SearchableText"
          class="form-control"
          type="text"
          placeholder="Search"
          data-url="${view/ajax_url}"
          value="${view/value}"
          i18n:attributes="placeholder text_search"/>
        <button class="btn btn-primary" type="submit" i18n:translate="button_search">Search</button>
    </form>
  </div>

</aside>

</tal:snippet>